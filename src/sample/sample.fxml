<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefHeight="327.0" prefWidth="322.0" vgap="10"
  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="sample.Controller">
  <columnConstraints>
    <ColumnConstraints/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints/>
  </rowConstraints>
  <children>
    <TabPane prefHeight="382.0" prefWidth="322.0" tabClosingPolicy="UNAVAILABLE">
      <tabs>
        <Tab text="Product Line">
          <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="293.0" prefWidth="357.0">
              <children>
                <Button fx:id="AddProductButton" layoutX="225.0" layoutY="47.0"
                  mnemonicParsing="false" onAction="#handleAddProductButtonAction"
                  text="Add Product"/>
                <GridPane layoutX="14.0" layoutY="14.0">
                  <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                  </columnConstraints>
                  <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                  </rowConstraints>
                  <children>
                    <Label prefHeight="17.0" prefWidth="98.0" text="Product Name"/>
                    <Label prefHeight="17.0" prefWidth="101.0" text="Manufacturer"
                      GridPane.rowIndex="1"/>
                    <Label prefHeight="17.0" prefWidth="102.0" text="Item Type"
                      GridPane.rowIndex="2"/>
                    <TextField fx:id="ProductNameText" GridPane.columnIndex="1"/>
                    <TextField fx:id="ManufacturerText" GridPane.columnIndex="1"
                      GridPane.rowIndex="1"/>
                    <ChoiceBox fx:id="ItemTypeChoice" prefWidth="150.0" GridPane.columnIndex="1"
                      GridPane.rowIndex="2"/>
                  </children>
                </GridPane>
                <Label layoutX="4.0" layoutY="111.0" text="Existing Products"/>
                <TableView layoutX="95.0" layoutY="111.0" prefHeight="144.0" prefWidth="222.0">
                  <columns>
                    <TableColumn prefWidth="75.0" text="Product Name"/>
                    <TableColumn prefWidth="75.0" text="Manufacturer"/>
                    <TableColumn prefWidth="75.0" text="Item Type"/>
                  </columns>
                </TableView>
              </children>
            </AnchorPane>
          </content>
        </Tab>
        <Tab text="Produce">
          <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
              <children>
                <Label layoutX="14.0" layoutY="14.0" text="Choose Product"/>
                <ListView layoutX="108.0" layoutY="11.0" prefHeight="24.0" prefWidth="150.0"/>
                <Label layoutX="14.0" layoutY="56.0" text="Choose Quantity"/>
                <ComboBox fx:id="ProductionRecords" layoutX="108.0" layoutY="52.0"
                  prefWidth="150.0"/>
                <Button fx:id="RecordProductionButton" layoutX="126.0" layoutY="92.0"
                  mnemonicParsing="false" onAction="#handleRecordProductionButtonAction"
                  text="Record Production"/>
              </children>
            </AnchorPane>
          </content>
        </Tab>
        <Tab text="Production Log">
          <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
              <children>
                <TextArea layoutX="19.0" layoutY="38.0" prefHeight="241.0" prefWidth="277.0"/>
                <Label layoutX="19.0" layoutY="14.0" text="Productoin Log Information"/>
              </children>
            </AnchorPane>
          </content>
        </Tab>
      </tabs>
    </TabPane>
  </children>
  <stylesheets>
    <URL value="@ProductionStyleSheet.css"/>
  </stylesheets>
</GridPane>
